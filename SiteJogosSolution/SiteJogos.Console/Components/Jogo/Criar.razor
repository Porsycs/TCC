<RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.SpaceBetween" AlignItems="AlignItems.Center">
    <RadzenLabel><h4>@(!Existe ? "+ Novo Jogo" : "Editar Jogo")</h4></RadzenLabel>
    <RadzenBreadCrumb>
        <RadzenBreadCrumbItem Path="/MeusJogos" Text="Meus Jogos" />
        <RadzenBreadCrumbItem Text="@(!Existe ? "Novo Jogo" : "Editar Jogo")" Icon="@(!Existe ? "add" : "")" />
    </RadzenBreadCrumb>
</RadzenStack>

@code{

    [Parameter]
    public bool Existe { get; set; } = false;

}