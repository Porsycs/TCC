@model Jogo

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" name="viewport" content="width=device-width" />
    <title>QR Code - @(Model.Nome)</title>

    <style>
        body {
            width: 100%;
            height: auto;
            margin: 0;
            padding: 0;
            font-family: 'Zeyada', cursive !important;
        }

        .border {
            position: fixed;
            top: 0;
            left: 0;
            border: 5px double;
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
            page-break-inside: avoid;
            box-sizing: border-box;
            border: 4px solid black;
        }

    </style>
</head>

<body>
    <div class="border">
        <div style="width: 100%; padding: 15px; text-align: center; padding-top: 100px">
            <h1>@(Model.Nome)</h1>
            <img src="data:image/png;base64,@(Model.Base64QrCode)" />
            <h5 style="margin-top: 200px">@(Model.TemplateDescricao) feito por</h5>
            <h4>@(Model?.UsuarioInclusao?.Nome)</h4>
            <div style="margin-top: 35px">&nbsp;</div>
        </div>
    </div>
</body>

</html>